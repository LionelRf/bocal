{% extends 'base.html.twig' %}

{% block title %}Le Bocal{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section class="section-main-1">
    <div class="container text-center">
        <div class="row align-items-center">
            <div class="col-lg-1 text-center">
            </div>
            <div class="col-lg-2 text-center">
              <img src="{{asset('images/4.png')}}" alt="icone légumes">
            </div>
            <div class="col-lg-6 text-center">
              <h2>La fiche bocal</h2>
            </div>
            <div class="col-lg-1 text-center">
              <img src="{{asset('images/5.png')}}" alt="icone légumes">
            </div>
        </div>
    </div>
</section>


<div class="container">
  <div class="col-lg-12 mb-lg-4">
      <div class="card">
      <img src="{{ asset('images/' ~ article.picture) }}"alt="Carottes" class="logo">
      <div class="card-body">
          <h3>{{ article.title }} </h3>
          <br>
          <p>{{ article.descript }}</p>
          <br>
          <p>{{ article.ingredient }}</p>
          <br>
          <p>{{ article.preparation}}</p>
          <br>
          <p class="card-text">{{ article.content }}</p>
      </div>
      </div>
  </div>
</div>


{% endblock %}
