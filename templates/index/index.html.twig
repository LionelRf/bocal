{% extends 'base.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}


<section class="section-main-1">
    <div class="container text-center">
        <div class="row align-items-center">
            <div class="col-lg-1 text-center">
            </div>
            <div class="col-lg-2 text-center">
              <img src="{{asset('images/4.png')}}" alt="icone légumes">
            </div>
            <div class="col-lg-6 text-center">
              <h2>Les fiches pratiques des bocaux</h2>
            </div>
            <div class="col-lg-1 text-center">
              <img src="{{asset('images/5.png')}}" alt="icone légumes">
            </div>
        </div>
    </div>
</section>
          
     
{% for article in articles %}
    <div class="container text-center">
        <div class="col-lg-4 mb-lg-4 text-center">
            <div class="card">
                <img src="{{ asset('images/' ~ article.picture) }}"alt="Carottes" class="logo">
                <div class="card-body">
                    <h3>{{ article.title }} </h3>
                    <p class="card-text">{{ article.content }}</p>
                    <a class="btn btn-primary" href= "{{ path('app_article',{title:article.title}) }}">VOIR LA FICHE</a>
                </div>
            </div>
        </div>
    </div>
{% endfor %} 

{% endblock %}
